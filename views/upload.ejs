    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <title>College Resource Management</title>
    <script>
        function FileDetails() {

            // GET THE FILE INPUT.
            var fi = document.getElementById('uploadedfiles');

            // VALIDATE OR CHECK IF ANY FILE IS SELECTED.
            if (fi.files.length > 0) {

                // THE TOTAL FILE COUNT.
                document.getElementById('uploadfilestext').innerHTML =
                    'Total Files: <b>' + fi.files.length + '</b></br >';

                // RUN A LOOP TO CHECK EACH SELECTED FILE.
                for (var i = 0; i <= fi.files.length - 1; i++) {

                    var fname = fi.files.item(i).name;      // THE NAME OF THE FILE.
                    var fsize = fi.files.item(i).size;      // THE SIZE OF THE FILE.

                    // SHOW THE EXTRACTED DETAILS OF THE FILE.
                    document.getElementById('uploadfilestext').innerHTML =
                        document.getElementById('uploadfilestext').innerHTML + '<br /> ' +
                        fname + ' (<b>' + fsize + '</b> bytes)';
                }
            }
            else {
                alert('Please select a file.')
            }
        }

    </script>


</head>


<body>
    <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="/courses">College Resource</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/courses/<%= dept%>">Home</a>
                </li>
                <li><a class="nav-link" href="/files/mainfs/<%= dept%>/<%= course%>">Course Page</a></li>
                <li class="nav-item active"><a class="nav-link" href="#">Upload File</a></li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <div class='mt-4'>
            <ol class="breadcrumb">
                <li class='breadcrumb-item'><a href="/courses/<%= dept %>">Home</a></li>
                <li class='breadcrumb-item'><a href="/files/mainfs/<%= dept%>/<%= course%>">Course Page (<%= course%>
                            )</a></li>
                <li class='breadcrumb-item active'><a href="#">Upload file to <%= course%></a></li>
            </ol>
        </div>
        <br /><br />
        <div class="row">
            <div class="col-md-6 m-auto">
                <h1 class="text-center display-4 my-4">Upload Files </h1>
                <form action="/files/mainfs/<%= dept%>/<%= course%>/uploadfile" method="POST"
                    enctype="multipart/form-data">
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle btn-md" type="button" id="dropdownMenuButton"
                            data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" name = "filetype">
                            Select Module
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#" id='Syllabus'>Syllabus</a>
                            <a class="dropdown-item" href="#" id='Module1'>Module 1</a>
                            <a class="dropdown-item" href="#" id='Module2'>Module 2</a>
                            <a class="dropdown-item" href="#" id='Module3'>Module 3</a>
                            <a class="dropdown-item" href="#" id='Module4'>Module 4</a>
                            <a class="dropdown-item" href="#" id='Module5'>Module 5</a>
                            <a class="dropdown-item" href="#" id='Module6'>Module 6</a>
                            <a class="dropdown-item" href="#" id='Module7'>Module 7</a>
                            <a class="dropdown-item" href="#" id='Guest'>Guest Lecture</a>
                            <a class="dropdown-item" href="#" id='lab'>Lab Files</a>
                            <a class="dropdown-item" href="#" id='others'>Others</a>
                        </div>
                    </div>
                    <br>
                    <div class="custom-file mb-3 d-grid gap-2">


                        <input type="file" name="file" id="uploadedfiles" multiple="multiple" onchange="FileDetails()"
                            class="custom-file-input border border-light border-3 text-white ">
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary" id="submit" name="submit">Submit</button>
                    </div>
                    <div class="d-grid gap-2">
                        <p id='uploadfilestext'></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"
        integrity="sha384-SR1sx49pcuLnqZUnnPwx6FCym0wLsk5JZuNx2bPPENzswTNFaQU1RDvt3wT4gWFG"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js"
        integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc"
        crossorigin="anonymous"></script>
