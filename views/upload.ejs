    <script>
        $(function () {
            $(".dropdown-menu").on('click', 'a', function () {
                $("#dropdownMenuButton").text($(this).text());
                // $(".btn:first-child").val($(this).text());
                console.log(document.getElementById("dropdownMenuButton").textContent)
            });
        });
        $("#submit").on('click',function(){
            $.post("/files/mainfs/<%= dept%>/<%= course%>/uploadfile",{filetype:document.getElementById("dropdownMenuButton").textContent},function(result){
                
            });
        })
    </script>
